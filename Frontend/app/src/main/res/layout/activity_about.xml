<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AboutActivity">

    <RelativeLayout
        android:id="@+id/AboutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingTop="@dimen/text_view_vertical_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/PreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/AppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PreviousButton"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:paddingStart="@dimen/horizontal_element_padding"
            android:text="Crushy"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/TeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AppName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingStart="@dimen/horizontal_element_padding"
            android:text="Group 12"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <RelativeLayout
            android:id="@+id/Member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TeamName"
            android:orientation="vertical"
            android:paddingStart="@dimen/horizontal_element_padding">

            <TextView
                android:id="@+id/member_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Member"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_text"
                android:fontFamily="sans-serif"
                android:text="    - Ziyu He"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_1"
                android:fontFamily="sans-serif"
                android:text="    - Xinyan Huang"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_2"
                android:fontFamily="sans-serif"
                android:text="    - An Luo"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_3"
                android:fontFamily="sans-serif"
                android:text="    - Li Shen"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/member_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/member_4"
                android:fontFamily="sans-serif"
                android:text="    - Yongle Zhu"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Member"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/horizontal_element_padding"
            android:text="This is the app for the group assignment2 of COMP90018"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/horizontal_element_padding"
            android:text="Version: 0.9.0"
            android:textColor="@color/white"
            android:textSize="18sp"></TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>